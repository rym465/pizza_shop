<p id="notice"><%= notice %></p>

<h1>Listing Pizzas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Crust</th>
      <th>Sauce</th>
      <th>Toppings</th>
      <th>Cost</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pizzas.each do |pizza| %>
      <tr>
        <td><%= pizza.name %></td>
        <td><%= pizza.crust %></td>
        <td><%= pizza.sauce %></td>
        <td><%= pizza.toppings %></td>
        <td><%= pizza.cost %></td>
        <td><%= pizza.image %></td>
        <td><%= link_to 'Show', pizza %></td>
        <td><%= link_to 'Edit', edit_pizza_path(pizza) %></td>
        <td><%= link_to 'Destroy', pizza, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

